.lxfscroll {
	margin-left: auto;
	margin-right: auto;
	position: relative;
	height: 330px;
	overflow: hidden;
	width: 100%;
	
}

.lxfscroll ul li {
	height: 330px;
	text-align: center;
	line-height: 370px;
	position: absolute;
	font-size: 20px;
}

.lxfscroll-title {
	margin-right: auto;
	margin-left: auto;
	margin: 0 auto;
	margin-top: -32px;
	position: relative;
}

.lxfscroll-title li {
	height: 6px;
	width: 50px;
	float: left;
	line-height: 20px;
	text-align: center;
	border: 1px solid #d8d8d8;
	margin-right: 2px;
}



